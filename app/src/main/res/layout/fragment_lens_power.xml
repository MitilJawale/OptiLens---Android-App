<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:backgroundTint="@color/light_app_color"
    tools:context=".fragments.LensPowerFragment">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Power from your prescription"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/basic_app_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="50dp"/>

    <!-- Left Eye Prescription Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <!-- Left Eye SPH -->
        <EditText
            android:id="@+id/leftsph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="SPH"
            android:inputType="numberDecimal|numberSigned"
            android:padding="20dp"/>

        <!-- Left Eye CYL -->
        <EditText
            android:id="@+id/leftcly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="CYL"
            android:inputType="numberDecimal|numberSigned"
            android:padding="20dp"/>

        <!-- Left Eye AXIS -->
        <EditText
            android:id="@+id/leftaxis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="AXIS"
            android:inputType="number"
            android:padding="20dp"/>
    </LinearLayout>

    <!-- Right Eye Prescription Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <!-- Right Eye SPH -->
        <EditText
            android:id="@+id/rightsph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="SPH"
            android:inputType="numberDecimal|numberSigned"
            android:padding="20dp"/>

        <!-- Right Eye CYL -->
        <EditText
            android:id="@+id/rightcly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="CYL"
            android:inputType="numberDecimal|numberSigned"
            android:padding="20dp"/>

        <!-- Right Eye AXIS -->
        <EditText
            android:id="@+id/rightaxis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="AXIS"
            android:inputType="number"
            android:padding="20dp"/>
    </LinearLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/savebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@color/basic_app_color"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>


